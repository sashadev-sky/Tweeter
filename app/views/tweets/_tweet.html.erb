
<div class='tweet'>
  <h3 class='tweeter'>
    <a href='<%= user_url(tweet.user) %>'>
      @<%= tweet.user.username %>
    </a>
  </h3>

  <p><%= tweet.content %></p>

<% if tweet.mentioned_users.length > 0 %>
  <ul>
    <% tweet.mentioned_users.each do |mentioned_user| %>
      <li><a href="<%= user_url(mentioned_user) %>"><%= mentioned_user.username %></a></li>
    <% end %>
  </ul>
<% end %>
